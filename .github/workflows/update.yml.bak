name: Update Live Channels

on:
  schedule:
    - cron: '0 0 1 * *' # 每天1點自動執行一次
  workflow_dispatch:      # 允許手動點擊執行

jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      contents: write # 允許機器人寫入檔案回儲存庫

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.9'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install yt-dlp

      - name: Run liveScanner
        run: python liveScanner.py

      - name: Commit and Push
        run: |
          git config --global user.name "GitHub Action"
          git config --global user.email "action@github.com"
          git add live_channels.json
          git commit -m "Update live channels" || exit 0
          git push